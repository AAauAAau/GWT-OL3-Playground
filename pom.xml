<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>de.desjardins.ol3</groupId>
  <artifactId>gwt-ol3</artifactId>
  <packaging>pom</packaging>
  <version>2.3.2</version>
  <name>${project.artifactId}</name>

  <repositories>
    <repository>
      <id>com.google.gwt</id>
      <name>GWT Sonatype Snapshots</name>
      <url>https://oss.sonatype.org/content/repositories/google-snapshots/</url>
    </repository>
    <repository>
      <id>org.codehaus.mojo</id>
      <name>Sonatype Snapshots</name>
      <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>com.google.gwt</id>
      <name>GWT Sonatype Snapshots</name>
      <url>https://oss.sonatype.org/content/repositories/google-snapshots/</url>
    </pluginRepository>
    <pluginRepository>
      <id>org.codehaus.mojo</id>
      <name>Sonatype Snapshots</name>
      <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
    </pluginRepository>
  </pluginRepositories>

  <developers>
    <developer>
      <name>Tino Desjardins</name>
      <id>tdesjardins</id>
      <roles>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>

  <properties>
    <!-- Convenience property to set the GWT version -->
    <gwt.version>2.8.0-SNAPSHOT</gwt.version>
    <!-- GWT needs at least java 1.5 -->
    <webappDirectory>${project.build.directory}/${project.build.finalName}</webappDirectory>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <gwt.maven.plugin.version>2.8.0-SNAPSHOT</gwt.maven.plugin.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>gwt-openlayers-client</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>gwt-openlayers-demo</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>com.google.gwt</groupId>
        <artifactId>gwt-user</artifactId>
        <version>${gwt.version}</version>
      </dependency>
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.12</version>
        <scope>test</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <modules>
    <module>gwt-ol3-client</module>
    <module>gwt-ol3-demo</module>
  </modules>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>gwt-maven-plugin</artifactId>
          <version>${gwt.maven.plugin.version}</version>
          <configuration>
            <htmlunit>FF38</htmlunit>
            <!--  Enable to test with other browsers. -->
            <!--
            <mode>htmlunit</mode>
            <htmlunit>IE9,IE10</htmlunit>
            -->
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
